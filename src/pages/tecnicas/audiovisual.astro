---
import TecnicaPage from "../../components/TecnicaPage.astro";
import audiovisual from "../../assets/images/audiovisual.jpg";
import imagen1 from "../../assets/images/audiovisual1.jpg";
import imagen2 from "../../assets/images/audiovisual2.jpg";
import imagen3 from "../../assets/images/audiovisual3.jpg";
import imagen4 from "../../assets/images/audiovisual4.jpg";
import imagen5 from "../../assets/images/audiovisual5.jpg";
import imagen6 from "../../assets/images/audiovisual6.jpg";
import GalleryLightbox from "../../components/GalleryLightbox.astro";
// import video1 from '../../assets/videos/clip-aula.mp4'; // solo si usas video local
---

<TecnicaPage
  nombre="Audiovisual"
  descripcion="Exploramos el lenguaje audiovisual como herramienta pedagógica para la expresión artística, crítica y reflexión."
  imagen={audiovisual}
>
  <div slot="planificaciones">
    <h2 class="text-2xl font-semibold mb-4">Planificaciones</h2>
    <ul class="list-disc list-inside space-y-2">
      <li>
        <a href="/docs/audiovisual-plan1.pdf" class="text-blue-400 underline"
          >Planificación inicial 2023</a>
      </li>
      <li>
        <a href="/docs/audiovisual-guion.pdf" class="text-blue-400 underline"
          >Guión didáctico: creación de cortometraje</a>
      </li>
    </ul>
  </div>

  <div slot="galeria">
    <h2 class="text-2xl font-semibold mb-4">Galería de Imágenes</h2>
    <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
      <img
        src={imagen1.src}
        alt="Grabación 1"
        class="w-full h-48 md:h-56 object-cover rounded shadow gallery-image hover:scale-105 transform transition-transform duration-300 cursor-pointer"
        loading="lazy"
        data-index="0"
      />
      <img
        src={imagen2.src}
        alt="Edición"
        class="w-full h-48 md:h-56 object-cover rounded shadow gallery-image hover:scale-105 transform transition-transform duration-300 cursor-pointer"
        loading="lazy"
        data-index="1"
      />
      <img
        src={imagen3.src}
        alt="Grabación 2"
        class="w-full h-48 md:h-56 object-cover rounded shadow gallery-image hover:scale-105 transform transition-transform duration-300 cursor-pointer"
        loading="lazy"
        data-index="2"
      />
      <img
        src={imagen4.src}
        alt="Edición 2"
        class="w-full h-48 md:h-56 object-cover rounded shadow gallery-image hover:scale-105 transform transition-transform duration-300 cursor-pointer"
        loading="lazy"
        data-index="3"
      />
      <img
        src={imagen5.src}
        alt="Grabación 3"
        class="w-full h-48 md:h-56 object-cover rounded shadow gallery-image hover:scale-105 transform transition-transform duration-300 cursor-pointer"
        loading="lazy"
        data-index="4"
      />
      <img
        src={imagen6.src}
        alt="Edición 3"
        class="w-full h-48 md:h-56 object-cover rounded shadow gallery-image hover:scale-105 transform transition-transform duration-300 cursor-pointer"
        loading="lazy"
        data-index="5"
      />
    </div>
  </div>

  <div slot="videos">
    <h2 class="text-2xl font-semibold mb-4">Videos Realizados</h2>
    <div class="aspect-w-16 aspect-h-9 mb-6">
      <iframe
        src="https://www.youtube.com/embed/nbpB3XbL9YE"
        title="Video de estudiantes"
        class="w-full h-full rounded shadow"
        frameborder="0"
        allowfullscreen></iframe>
      <div
        class="mb-5 text-center text-gray-300 text-sm md:text-base max-w-2xl mx-auto"
      >
        Este video muestra el trabajo realizado por los estudiantes durante el
        taller de expresión audiovisual del segundo semestre.
      </div>
      <iframe
        src="https://www.youtube.com/embed/RTjjC-X_eKA"
        title="Video de estudiantes"
        class="w-full h-full rounded shadow"
        frameborder="0"
        allowfullscreen>
      </iframe>
      <div
        class="text-center text-gray-300 text-sm md:text-base max-w-2xl mx-auto"
      >
        Este video muestra el trabajo realizado por los estudiantes durante el
        taller de expresión audiovisual del segundo semestre.
      </div>
    </div>
  </div>

  <div slot="otros">
    <h2 class="text-2xl font-semibold mb-4">Otros Recursos</h2>
    <p>
      Ejercicios prácticos, enlaces útiles o reflexiones docentes pueden ir
      aquí.
    </p>
  </div>
</TecnicaPage>

<!-- Lightbox -->
<GalleryLightbox />

<style>
  /* Alternativa: CSS personalizado para un efecto más suave */
  .gallery-image {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .gallery-image:hover {
    transform: scale(1.05);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
  }
</style>